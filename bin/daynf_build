#!/usr/bin/env bash
# This script is intended to be sourced, not executed directly.


DP=$daynf_PROJECT

# Attempt to deactivate any existing environment
source bin/daynf_deactivate &> /dev/null 
echo "Attempting to deactivate existing environments & re-init with --project $DP ."
. dynfinit --project $DP --deactivate &> /dev/null


# Handle build argument
if [[ "$1" == "BUILD" ]]; then

    if [[ "$?" != "0" ]]; then
        echo "Error: Failed to copy the global config file."
        return 1
    fi
    # Source the environment installer
    source config/day/daynf_env_installer.sh DAYNF
    if [[ "$?" != "0" ]]; then
        echo "Error: Failed to install the DAYNF environment."
        return 1
    else
        return 0
    fi

else
    if [[ "$1" =~ ^(-h|--help|help)$ ]]; then
        echo "Usage: daynf-build [BUILD]"
        echo "This script builds the DAYNF conda environment (only needed once per working environment)."
        echo "Run 'daynf-build BUILD' to install conda and the DAYNF environment."
        return 0
    fi
fi


return 0
