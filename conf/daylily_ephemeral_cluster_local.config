/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-core/sarek Daylily Ephemeral Cluster local config
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Profile derived from the Daylily Informatics ephemeral cluster defaults but
    configured to run all processes on the local executor. Intended for running
    the pipeline directly on the headnode where no Slurm scheduler is available.
----------------------------------------------------------------------------------------
*/

includeConfig 'daylily_ephemeral_cluster.config'

process {
    executor = 'local'
    queue = { null }
    clusterOptions = null
}

def queueSize = (System.getenv('DAYLILY_QUEUE_SIZE') ?: System.getenv('NXF_QUEUE_SIZE') ?: '256') as int

executor {
    name = 'local'
    queueSize = queueSize
}
